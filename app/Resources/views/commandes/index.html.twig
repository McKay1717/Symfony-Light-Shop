{% extends 'base.html.twig' %}

{% block body %}
{{ dump() }}
<h1>Commandes list</h1>
<div class="table-responsive">
	<table class="table">
		<thead>
			<tr>
				<th>NÂ° de commande</th>
				<th>Date d'achat</th>
				<th>Statuts</th>
				<th>Produits</th>
			</tr>
		</thead>
		<tbody>
			{% for commande in commandes %}
			<tr>
				<td>{{ commande.id }}</td>
				<td>{% if commande.dateAchat %} {{ commande.dateAchat|date('Y-m-d H:i:s') }}
					{% endif %}</td>
				<td>{{ commande.etat }}</td>
				<td>{% for panier in paniers %} {% if commande.id == panier.commande.id %}
					{{ panier.produit.nom }} {% endif %} {% endfor %}
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
{% if is_granted('ROLE_ADMIN') %}
<ul>
	<li><a href="{{ path('commandes_new') }}">Create a new entry</a></li>
</ul>
{% endif %}
{% endblock %}
