{% extends 'base.html.twig' %}

{% block body %}
{{ dump() }}
<h1>Commandes list</h1>
<div class="table-responsive">
	<table class="table table-hover">
		<thead>
			<tr>
				<th>NÂ° de commande</th>
				<th>Date d'achat</th>
				<th>Statuts</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			{% for commande in commandes %}
			<tr>
				<td>{{ commande.id }}</td>
				<td>{% if commande.dateAchat %} {{ commande.dateAchat|date('Y-m-d H:i:s') }}
					{% endif %}</td>
				<td>{{ commande.etat }}</td>
				<td><a href="{{ path('commandes_show', { 'id': commande.id }) }}"">Detail de la commande</a></td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
{% if is_granted('ROLE_ADMIN') %}
<ul>
	<li><a href="{{ path('commandes_new') }}">Create a new entry</a></li>
</ul>
{% endif %}
{% endblock %}
