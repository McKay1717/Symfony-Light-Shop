{% extends 'base.html.twig' %}

{% block body %}
<h1>Comment</h1>

<table>
	<tbody>
		<tr>
			<th>Content</th>
			<td>{{ comment.content | raw  }}</td>
		</tr>
		<tr>
			<th>Date</th>
			<td>{% if comment.date %}
				{{ comment.date|date('Y-m-d H:i:s') }}
				{% endif %}</td>
		</tr>
		<tr>
			<th>Id</th>
			<td>{{ comment.id }}</td>
		</tr>
	</tbody>
</table>
{% if is_granted('ROLE_ADMIN') %}
<ul>
	<li><a href="{{ path('comments_index') }}">Back to the list</a></li>
	<li><a href="{{ path('comments_edit', { 'id': comment.id }) }}">Edit</a>
	</li>
	<li>{{ form_start(delete_form) }} <input type="submit"
		value="Delete"> {{ form_end(delete_form) }}</li>
</ul>
{% endif %}
{% endblock %}
