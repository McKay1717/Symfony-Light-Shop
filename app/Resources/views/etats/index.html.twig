{% extends 'base.html.twig' %}

{% block body %}
    <h1>Etats list</h1>

    <table>
        <thead>
            <tr>
                <th>Libelle</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etat in etats %}
            <tr>
                <td><a href="{{ path('etats_show', { 'id': etat.id }) }}">{{ etat.libelle }}</a></td>
                <td>{{ etat.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('etats_show', { 'id': etat.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('etats_edit', { 'id': etat.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('etats_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
