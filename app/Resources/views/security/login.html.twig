{% extends 'base.html.twig' %}
{% block body %}
<div class="container-fluid">
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			{% if error %}
			<div>
				<div class="alert alert-danger text-center" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			</div>
			{% endif %}
		</div>
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<form action="{{ path('login') }}" method="post" class="text-center">
				<div class="form-group">
					<label for="username">Username:</label> <input type="text"
						id="username" name="_username" value="{{ last_username }}" />
				</div>
				<div class="form-group">
					<label for="password">Password:</label> <input type="password"
						id="password" name="_password" /> <input type="hidden"
						name="_target_path" value="/" />
				</div>


				<button class="btn btn-default" type="submit">login</button>
			</form>
		</div>
	</div>
	<a href="{{ path('users_new') }}">Pas de compte ?</a>
	{% endblock %}