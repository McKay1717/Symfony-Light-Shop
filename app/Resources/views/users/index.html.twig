{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users list</h1>

    <table>
        <thead>
            <tr>
                <th>Email</th>
                <th>Password</th>
                <th>Login</th>
                <th>Nom</th>
                <th>Codepostal</th>
                <th>Ville</th>
                <th>Adresse</th>
                <th>Valide</th>
                <th>Droit</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('users_show', { 'id': user.id }) }}">{{ user.email }}</a></td>
                <td>{{ user.password }}</td>
                <td>{{ user.login }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.codePostal }}</td>
                <td>{{ user.ville }}</td>
                <td>{{ user.adresse }}</td>
                <td>{% if user.valide %}Yes{% else %}No{% endif %}</td>
                <td>{{ user.droit }}</td>
                <td>{{ user.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('users_show', { 'id': user.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('users_edit', { 'id': user.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('users_new') }}">Create a new user</a>
        </li>
    </ul>
{% endblock %}
